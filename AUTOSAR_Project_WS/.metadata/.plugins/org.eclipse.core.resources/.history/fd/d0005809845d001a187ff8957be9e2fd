#ifndef PORT_CFG_H_
#define PORT_CFG_H_

/*
 * Module Version 1.0.0
 */
#define PORT_CFG_SW_MAJOR_VERSION              (1U)
#define PORT_CFG_SW_MINOR_VERSION              (0U)
#define PORT_CFG_SW_PATCH_VERSION              (0U)

/*
 * AUTOSAR Version 4.0.3
 */
#define PORT_CFG_AR_RELEASE_MAJOR_VERSION     (4U)
#define PORT_CFG_AR_RELEASE_MINOR_VERSION     (0U)
#define PORT_CFG_AR_RELEASE_PATCH_VERSION     (3U)

/* Pre-compile option for Development Error Detect */
#define PORT_DEV_ERROR_DETECT                (STD_ON)

/* Pre-compile option for Version Info API */
#define PORT_VERSION_INFO_API                (STD_OFF)

/* Pre-compile option for Set Pin Mode API */
#define PORT_SET_PIN_MODE_API                (STD_OFF)

/* Number of the configured Dio Channels */
#define PORT_CONFIGURED             (4U)


/* Channel Index in the array of structures in Dio_PBcfg.c */
#define DioConf_LED_CHANNEL_ID_INDEX        (uint8)0x00
#define DioConf_BUTTON_CHANNEL_ID_INDEX     (uint8)0x01

/* DIO Configured Port ID's  */
#define DioConf_PORTA_NUM              		 (Dio_PortType)0 /* PORTC */
#define DioConf_PORTB_NUM           		 (Dio_PortType)1 /* PORTD */
#define DioConf_PORTC_NUM             		 (Dio_PortType)2 /* PORTD */
#define DioConf_PORTD_NUM            		 (Dio_PortType)3 /* PORTD */

/* DIO Configured Channel ID's */
#define DioConf_PORTA_PIN0_NUM
#define DioConf_LED_CHANNEL_NUM             (Dio_ChannelType)5 /* Pin 5 in PORTC */
#define DioConf_BUTTON_CHANNEL_NUM          (Dio_ChannelType)2 /* Pin 2 in PORTD */




#endif /* PORT_CFG_H_ */
